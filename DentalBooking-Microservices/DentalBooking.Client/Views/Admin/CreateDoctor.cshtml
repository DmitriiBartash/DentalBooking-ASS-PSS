@model DentalBooking.Client.Models.ViewModels.Admin.CreateDoctorViewModel
@{
    ViewData["Title"] = "Create Doctor";
    Layout = "_LayoutAdmin";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-dark text-white text-center py-3">
                <h4 class="mb-0">
                    <i class="fas fa-user-md me-2"></i> Create Doctor
                </h4>
            </div>

            <div class="card-body p-4">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger text-center mb-3">
                        @Model.ErrorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success text-center mb-3">
                        @Model.SuccessMessage
                    </div>
                }

                <form asp-action="CreateDoctor" asp-controller="Admin" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Type" class="form-label fw-bold"></label>
                        <select asp-for="Type" class="form-select">
                            <option value="Therapist">Therapist</option>
                            <option value="Surgeon">Surgeon</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger small"></span>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="toggleProcedures">
                        <label class="form-check-label fw-bold" for="toggleProcedures">
                            Customize procedures manually
                        </label>
                    </div>

                    <div id="procedureSection" class="mb-3" style="display:none;">
                        <label class="form-label fw-bold">Procedures (max 3)</label>
                        <div class="form-check">
                            @foreach (var proc in Model.AllProcedures)
                            {
                                <div>
                                    <input type="checkbox"
                                           class="form-check-input procedure-checkbox"
                                           name="SelectedProcedureIds"
                                           value="@proc.Id"
                                           id="proc_@proc.Id" />
                                    <label class="form-check-label" for="proc_@proc.Id">
                                        @proc.Name (@proc.Price.ToString("F2") MDL)
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="SelectedProcedureIds" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-3">
                        <i class="fas fa-save me-2"></i> Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const toggle = document.getElementById("toggleProcedures");
            const section = document.getElementById("procedureSection");

            toggle.addEventListener("change", () => {
                section.style.display = toggle.checked ? "block" : "none";
            });

            document.querySelectorAll(".procedure-checkbox").forEach(cb => {
                cb.addEventListener("change", () => {
                    const checked = document.querySelectorAll(".procedure-checkbox:checked");
                    if (checked.length > 3) {
                        cb.checked = false;
                        alert("You can select up to 3 procedures only.");
                    }
                });
            });
        });
    </script>
}
