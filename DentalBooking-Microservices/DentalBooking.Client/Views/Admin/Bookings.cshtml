@model DentalBooking.Client.Models.ViewModels.Admin.BookingsFilterViewModel
@{
    ViewData["Title"] = "Bookings";
    Layout = "_LayoutAdmin";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-dark text-white text-center py-3">
                <h4 class="mb-0">
                    <i class="fas fa-calendar-check me-2"></i> Bookings
                </h4>
            </div>

            <div class="card-body p-4">
                <form method="get" class="row g-3 mb-4 align-items-end">

                    <div class="col-md-3">
                        <label class="form-label fw-bold">Doctor</label>
                        <select class="form-select" name="doctorId">
                            <option value="">All</option>
                            @foreach (var d in Model.Doctors)
                            {
                                int.TryParse(d.Value, out var doctorValue);
                                <option value="@d.Value" selected="@(Model.DoctorId == doctorValue)">
                                    @d.Text
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold">Procedure</label>
                        <select class="form-select" name="procedureId">
                            <option value="">All</option>
                            @foreach (var p in Model.Procedures)
                            {
                                int.TryParse(p.Value, out var procedureValue);
                                <option value="@p.Value" selected="@(Model.ProcedureId == procedureValue)">
                                    @p.Text
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label fw-bold">Status</label>
                        <select class="form-select" name="status">
                            <option value="">All</option>
                            @{
                                var statuses = new[] { "Created", "Confirmed", "Completed", "Cancelled" };
                                foreach (var status in statuses)
                                {
                                    <option value="@status" selected="@(Model.Status == status)">
                                        @status
                                    </option>
                                    ;
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label fw-bold">From</label>
                        <input type="date" class="form-control" name="from"
                               value="@(Model.From?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label fw-bold">To</label>
                        <input type="date" class="form-control" name="to"
                               value="@(Model.To?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Filter
                        </button>
                    </div>
                </form>

                @if (!Model.Bookings.Any())
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>No bookings found.
                    </div>
                }
                else
                {
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Client</th>
                                <th>Doctor</th>
                                <th>Procedure</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var b in Model.Bookings)
                            {
                                <tr>
                                    <td>@b.ClientEmail</td>
                                    <td>@b.DoctorName</td>
                                    <td>@b.ProcedureName</td>
                                    <td>@b.Date.ToString("g")</td>
                                    <td>
                                        <span class="badge bg-@b.StatusClass">@b.Status</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
