<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentalBooking (Client)</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/_LayoutClient.css" />
</head>
<body>
    <header class="bg-primary text-white p-2 mb-4 shadow-sm">
        <div class="container d-flex justify-content-between align-items-center">
            <h2 class="h4 mb-0">DentalBooking - Client</h2>
            <nav class="d-flex gap-2">
                <a class="btn btn-light btn-sm @(ViewData["ActivePage"] as string == "CreateBooking" ? "active" : "")"
                   asp-controller="Client" asp-action="CreateBooking">
                    <i class="fas fa-calendar-plus"></i> Book
                </a>
                <a class="btn btn-light btn-sm @(ViewData["ActivePage"] as string == "MyBookings" ? "active" : "")"
                   asp-controller="Client" asp-action="MyBookings">
                    <i class="fas fa-list"></i> My Bookings
                </a>
                <a class="btn btn-light btn-sm @(ViewData["ActivePage"] as string == "Profile" ? "active" : "")"
                   asp-controller="Client" asp-action="Profile">
                    <i class="fas fa-user"></i> Profile
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </nav>
        </div>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 border-top mt-auto">
        <small>&copy; 2025 DentalBooking</small>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    @RenderSection("Scripts", required: false)
</body>
</html>
