@model IEnumerable<DentalBooking.Client.Models.ViewModels.Common.BookingItem>
@{
    ViewData["Title"] = "My Bookings";
    Layout = "_LayoutClient";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white text-center py-3">
                <h4 class="mb-0">
                    <i class="fas fa-list me-2"></i> My Bookings
                </h4>
            </div>

            <div class="card-body p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success text-center">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    </div>
                }

                @if (Model == null || !Model.Any())
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>You have no bookings yet.
                    </div>
                }
                else
                {
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Procedure</th>
                                <th>Doctor</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                var localStart = booking.StartUtc.ToLocalTime();
                                var badgeClass = booking.Status switch
                                {
                                    "Confirmed" => "bg-success",
                                    "Cancelled" => "bg-danger",
                                    "Completed" => "bg-primary",
                                    _ => "bg-secondary"
                                };

                                <tr>
                                    <td>@booking.ProcedureName</td>
                                    <td>@booking.DoctorName</td>
                                    <td>@localStart.ToString("dd.MM.yyyy")</td>
                                    <td>@localStart.ToString("HH:mm")</td>
                                    <td><span class="badge @badgeClass">@booking.Status</span></td>
                                    <td class="text-center">
                                        @if (booking.Status != "Cancelled" && booking.Status != "Completed")
                                        {
                                            <form asp-action="CancelBooking" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@booking.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="fas fa-times me-1"></i> Cancel
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
